@model testMVC.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    Multiple Lines Comment
*@
@{
    var className = Model.Customers.Count > 2 ? "popular" : null;
}


<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie </text>
}
else
{
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customers</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var customer in Model.Customers)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(customer.Name, "Details", "Customers", new {id=customer.Id},null )
                        </td>
                    </tr>
                }
    </tbody>
</table> 
}



