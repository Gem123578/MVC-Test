@{
    ViewData["Title"] = "CreateEditView";
}
@model test.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit</h1>
</div>

<form asp-action="CreateEditViewForm" asp-controller="Home">
    <label>ID</label>
    <input class="form-control" placeholder="0" type="number" asp-for="ID" />
    <label class="mt-4">Value $</label>
    <input class="form-control" placeholder="0" type="number" asp-for="Value" step="0.01"/>
    <label class="mt-4">Description</label>
    <input class="form-control" placeholder="Add a description" type="text" asp-for="Description" />
    <button class="btn btn-primary mt-4" type="submit">Ok</button>
</form>